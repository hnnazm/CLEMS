<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= locals.title %> | <%= page %></title>
    <link rel="stylesheet" href="./css/all.css">
    <link rel="stylesheet" href="./css/chat.css">
  </head>

  <body>
    <div id="chat-header">
      <h1><%= locals.roomname %></h1>
      <button id="btn-settings"class="btn-text" type="submit">Settings</button>
    </div>
    <div id="chat-content"></div>
    <div id="chat-feedback"></div>
    <div id="chat-input">
      <form action="" method="POST" enctype="multipart/form-data">
        <div class="btn-media-wrapper">
          <button class="btn-media"><i class="fas fa-upload"></i></button>
          <input type="file" id="media" name="media" />
        </div>
        <input type="text" name="message" id="message" autocomplete="off"/>
        <button id="btn-send" type="submit"><i class="fas fa-chevron-circle-right"></i></button>
      </form>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="./js/screen.js"></script>
    <script src="./js/main.js"></script>
  </body>

</html>
